/* pages/AnyTicketMainPage/AnyTicketMainPage.wxss */
@import "imageStyles.wxss";
@import "../../global-colors.wxss";
@import "../MainMenu/MainMenu.wxss";
@import "/styles/studentContainer.wxss";
@import "/styles/button.wxss";
#any-ticket-master-container{
  padding-left: 16px;
  padding-right: 16px;
  padding-top: 20px;
  padding-bottom: 80px;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: var(--page-background);
}
#any-ticket-option-container{
  display: flex;
  flex-direction: column;
}
#option-subheading {
  color: var(--secondary);
  font-weight: 500;
  font-size: 18px;
  margin-top: 15px;
  margin-bottom: 12px;
  display: flex;
  flex-direction: column;
}
#option-subheading text {
  margin-top: 15px;
}
#submit-button {
  background-color: #D2E3FA;
  margin-top: 26px;
}
#submit-button text {
  color: #3180E9;
}
#add-submit-button {
  margin-bottom: 10px;
}
.status-no {
  font-size: 20px;
  font-weight: bold;
  color: #D81717;
}
.status-yes {
  font-size: 20px;
  font-weight: bold;
  color: #36B909;
}
.option-row {
  display: flex;
  flex-direction: column;
  height: 200px;
  background-color: var(--subcontainer-background);
  margin-top: 10px;
  margin-bottom: 10px;
  border-radius: 8px;
  padding: 15px;
  box-sizing: border-box;
}
.option-header{
  display: flex;
  justify-content: space-between;
}
.option-toggle {
  width: 24px;
  height: 24px;
}
.option-text {
  font-weight: 500;
}
#option-image{
  margin: 15px;
  margin-left: 25vw;
  background-repeat: no-repeat;
  background-size: contain;
  width: 100%;
  height: 130px;
}
.selectorIcon{
  width: 20px;
  height: 20px;
}
.student-list-picker-container {
  font-size: 17px;
  padding: 12px;
  background-color: var(--list-search-box);
  border-radius: 10px;
}
.question-select {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #000000;
}
.date-text {
  font-size: 22px;
  font-weight: bold;
  color: #3180E9;
}