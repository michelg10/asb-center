/* pages/AnyTicketMainPage/AnyTicketMainPage.wxss */
@import "imageStyles.wxss";
@import "../../global-colors.wxss";
@import "../MainMenu/MainMenu.wxss";
#any-ticket-master-container{
  padding-left: 16px;
  padding-right: 16px;
  padding-top: 20px;
  padding-bottom: 80px;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: var(--page-background);
}
#any-ticket-heading-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}
#any-ticket-display-container {
  display: flex;
  flex-direction: column;
}
#any-ticket-event-option-row{
  display: flex;
  flex-direction: row;
}
#any-ticket-ticket{
  margin-top: 20px;
  width: 100%;
  height: 153px;
  background-size: contain;
  border-radius: 8px;
}
#any-ticket-no-ticket{
  margin-top: 20px;
  width: 100%;
  height: 153px;
  background-size:contain;
  border-radius: 8px;
  opacity: 0.54;
}
.subheading-text{
  margin-top: 15px;
  font-size: 22px;
  font-weight: bold;
}
.sub-text{
  margin-top: 15px;
  margin-bottom: 15px;
  font-size: 16px;
  font-weight: bold;
}
#event-option{
  height: 200px;
  border-radius: 8px;
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 5px;
  padding: 9px 9px;
  box-sizing: border-box;
  background-color: var(--subcontainer-background);
}
#event-option text {
  margin-top: 5px;
  font-weight: 700;
  font-size: 17px;
}
#date-label {
  font-weight: 700;
  font-size: 17px;
  color: #3180E9;
}
#event-option-restrict-label{
  background-color: #000000;
  color: #FFFFFF;
  padding: 5px;
  margin: 5px;
  border-radius: 5px;
  font-weight: 700;
  width: 85px;
  height: 25px;
}
@media (prefers-color-scheme: dark) {
  #event-option-icon {
    margin-left: 10vw;
    width: 120px;
    height: 120px;
    background-size: contain;
    background-repeat: no-repeat;
    filter: invert();
  }
}
#event-option-icon {
  margin-left: 10vw;
  width: 120px;
  height: 120px;
  background-size: contain;
  background-repeat: no-repeat;
}
#AnyTicketErrorMessage {
  margin-top: 51px;
  margin-left: 38px;
  margin-right: 38px;
  text-align: center;
  font-size: 18px;
  font-weight: 500;
  line-height: 20px;
  color: #D81717;
}