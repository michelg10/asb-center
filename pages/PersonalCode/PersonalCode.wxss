/* pages/PersonalCode/PersonalCode.wxss */
@import "/styles/secureCodePreview.wxss";
#personal-code-container {
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 20px;
    padding-bottom: 80px;
    min-height: 100vh;
    box-sizing: border-box;
    background-color: var(--page-background);
}
#personal-code-heading-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 19px;
}
#compact-id-display {
    padding-top:15px;
    display:flex;
    flex-direction: column;
    align-items: center;
}
#compact-id-display-title {
    font-size:22px;
    font-weight:700;
    margin-bottom:3px;
}
#compact-id-display-id {
    font-size: 34px;
    font-weight: 800;
}
#personal-code-code-container {
    margin-top:16px;
}