/* pages/ScanFailure/ScanFailure.wxss */
#scanfailure-container {
  display: flex;
  position: absolute;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
#scanfailure-title {
  text-align: center;
  padding-bottom: 13px;
  margin: 0 64px;
}
#scanfailure-caption {
  font-size: 17px;
  text-align: center;
  margin: 0 35px;
}
#scanfailure-top-container {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  align-items: center;
  justify-content: center;
}
#scanfailure-bottom-container {
  margin-bottom: 117px;
  flex-grow: 0;
}
#scanfailure-back-button {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 11px;
  background-color: #D2E3FA;
  width: 138px;
  height: 48px;
}
#scanfailure-back-button-text {
  color: var(--link);
  font-size: 22px;
  font-weight: 500;
}