.list-selection-row {
    height: 44px;
    padding: 0 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.list-selection-check {
    position: absolute;
    top: 0;
    left: 0;
    height: 20px;
    width: 20px;
}
.list-selection-check-container {
    height: 20px;
    width: 20px;
    position: relative;
}
.list-selection {
    background-color: var(--subcontainer-background);
    border-radius: 8px;
    margin-top: 10px;
}
.list-selection-row-separator {
    margin-left: 17px;
    height: 1px;
    background-color: var(--list-separator);
    width: calc(100%-17px);
}